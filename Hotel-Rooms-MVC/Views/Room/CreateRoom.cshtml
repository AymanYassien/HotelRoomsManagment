@model RoomCreateDTO

@{
    ViewData["Title"] = "Add New Room";
}

<div class="container">
    <div class="border">
        <h1>Add New Room</h1>
        <form asp-action="CreateRoom" enctype="multipart/form-data">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <!-- Left column fields -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="e.g. Deluxe Ocean View" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Rate" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">SAR</span>
                            <input asp-for="Rate" type="number" class="form-control" id="rate" min="0" step="0.01" placeholder="149.99" required />
                        </div>
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SpaceByMiter" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="SpaceByMiter" type="number" class="form-control" id="spaceByMeter" min="1" placeholder="32" required />
                            <span class="input-group-text">m²</span>
                        </div>
                        <span asp-validation-for="SpaceByMiter" class="text-danger"></span>
                        <small class="form-text text-muted">Enter room size in square meters</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Right column fields -->
                    <div class="mb-4">
                        <label asp-for="NumberOfBeds" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="NumberOfBeds" type="number" class="form-control" id="numberOfBeds" min="1" max="6" placeholder="2" required />
                            <span class="input-group-text"><i class="fas fa-bed"></i></span>
                        </div>
                        <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="mb-4">
                        <label asp-for="Image" class="form-label fw-bold">Room Image</label>
                        <input asp-for="Image" class="form-control"/>
                        <input asp-for="ImageUrl" hidden class="form-control"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <small class="form-text text-muted">Recommended size: 1200×800px</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Amenity" class="form-label fw-bold"></label>
                        <input asp-for="Amenity" type="text" class="form-control" id="amenity" placeholder="WiFi, TV, Mini-bar, Ocean View" required />
                        <span asp-validation-for="Amenity" class="text-danger"></span>
                        <small class="form-text text-muted">Separate multiple amenities with commas</small>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Details" class="form-label fw-bold"></label>
                <textarea asp-for="Details" class="form-control" id="details" rows="4" placeholder="Describe the room features, view, and other important details..." required></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="d-flex mt-5">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Add Room
                </button>
                <a asp-action="IndexRoom" asp-controller="Room" class="btn btn-outline-primary ms-3">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}