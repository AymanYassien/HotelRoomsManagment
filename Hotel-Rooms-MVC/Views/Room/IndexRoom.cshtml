@model List<RoomDTO>


<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Rooms List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Room" asp-action="CreateRoom" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Room</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Capacity
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.NumberOfBeds Persons</td>
				<td>SAR @((item.Rate).ToString())</td>
				<td>
					<a asp-controller="Room" asp-action="UpdateRoom" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
					<a asp-controller="Room" asp-action="DeleteRoom" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
				</td>
			</tr>
		}
		</tbody>
    </table>

</div>