@model List<BedNumberDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Bed Numbers List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="BedNumber" asp-action="AddNewBedNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Bed Number</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Room Name
				</th>
				<th>
					Bed Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Room.Name</td>
				<td>@item.bedNo </td>
				<td>
					<a asp-controller="BedNumber" asp-action="UpdateBedNumber" asp-route-id="@item.bedNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
					<a asp-controller="BedNumber" asp-action="DeleteBedNumber" asp-route-id="@item.bedNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
				</td>
			</tr>
		}
		</tbody>
    </table>

</div>