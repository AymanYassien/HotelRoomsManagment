@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="border room-card mt-5">
                <div class="room-card-header text-center">
                    <h2><i class="fas fa-sign-out-alt"></i> Logout</h2>
                </div>
                <div class="room-card-body text-center">
                    <p>Are you sure you want to logout?</p>
                    <form asp-action="Logout" method="post">
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-check"></i> Yes, Logout</button>
                            <a asp-controller="Room" asp-action="IndexRoom" class="btn btn-outline-primary"><i class="fas fa-times"></i> Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>